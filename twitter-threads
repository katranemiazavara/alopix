            <link>https://itsairborne.com/we-stopped-covid-in-our-home-56e1af5a8715?source=rss----ad92f7f89396--twitter_threads</link>
            <guid isPermaLink="false">https://medium.com/p/56e1af5a8715</guid>
            <category><![CDATA[twitter-threads]]></category>
            <category><![CDATA[masks]]></category>
            <category><![CDATA[vaccines]]></category>
            <category><![CDATA[covid19]]></category>
            <category><![CDATA[filtration]]></category>
            <dc:creator><![CDATA[Joey Fox]]></dc:creator>
            <pubDate>Mon, 16 Jan 2023 08:18:34 GMT</pubDate>
